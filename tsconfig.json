{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es5",
    "module": "commonjs",
    "outDir": "./lib",
    "moduleResolution": "node",
    "importHelpers": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": true
  },
  "include": ["src/*"],
  "exclude": ["node_modules", "**/__tests__/*", "src/template/*"]
}